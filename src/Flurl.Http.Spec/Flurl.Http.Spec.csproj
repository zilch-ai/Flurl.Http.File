<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <IsPackable>true</IsPackable>
    <PackageId>Flurl.Http.Spec</PackageId>
    <Description>Flurl.Http.Spec is a lightweight C# library for parsing and executing `.HTTP` or `.REST` files with HTTP request definitions. The library is designed to integrate seamlessly with the Flurl.Http ecosystem and provides an easy-to-use programmatic interface.</Description>
    <PackageTags>http;request;spec</PackageTags>
    <Version>0.2.0</Version>
    <PackageProjectUrl>https://github.com/zilch-ai/Flurl.Http.Spec</PackageProjectUrl>
    <RepositoryUrl>https://github.com/zilch-ai/Flurl.Http.Spec</RepositoryUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>
  <ItemGroup>
    <None Include="$(Home)/*.md" pack="true" PackagePath=".">
        <Link>docs\%(FileName)%(Extension)</Link>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Fluid.Core" />
    <PackageReference Include="Flurl.Http" />
    <PackageReference Include="Parlot" />
  </ItemGroup>

</Project>
